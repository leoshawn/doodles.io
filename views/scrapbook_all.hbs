<ul id="scrapbook">
  {{#each doodles}}
  <li data-slug={{slug}}>
    <div class="doodle_scrapbook">
      <div class="doodle_ratio_push"></div>
      <div class="doodle_ratio">
        <div class="doodle_image">
          <a class="doodle_image_link loader" href="/{{slug}}" data-image-url="{{image}}" data-image-alt="{{title}}">
            <div class="doodle_image_options">
            {{#if parent}}
              <i class="fa fa-code-fork fork"></i>
            {{/if}}
          </div>
          </a>
        </div>
      </div>
    </div>
  </li>
  {{/each}}
</ul>
