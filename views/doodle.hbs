{{!< layout}}

<div class="middle_container">
  <div class="middle">
    <div class="container container_doodle">
      <div class="dummy"></div>
      <div class="main">
        <nav>
          <select id="color">
            <option value="black">Black</option>
            <option value="blue" selected="selected">Blue</option>
            <option value="red">Red</option>
            <option value="green">Green</option>
          </select>
          <span id="save_text"></span>
        </nav>
        <div id="heading">
          <input type="text" id="title" class="placeholder" data-value="Type your title here..." value="Type your title here..." />
        </div>
        <div id="sketch">
          <canvas id="tools_sketch" class="notepad"></canvas>
        </div>
      </div>
    </div>
    <div class="meta">
      {{#if doodle.parent}}
        <strong><a href="/{{doodle.parent}}">View original doodle &rarr;</a></strong>
      {{/if}}
    </div>
  </div>
</div>
<script>
  {{#if doodle}}
    var doodle = {
      title: '{{doodle.title}}',
      slug: '{{doodle.slug}}',
      image: '{{doodle.image}}',
      _id: '{{doodle._id}}'
    }
  {{else}}
    var doodle = null;
  {{/if}}
</script>