{{!< layout}}
<div class="vertical_layout">
  <div class="vertical_cell">
    <div id="doodle" class="container">
      <div class="doodle_ratio_push"></div>
      <div class="doodle_ratio">
        <div class="doodle_heading">
          <style>




.user2 {
  position: relative;
  background: rgba(255, 255, 255, 0.2);
  height: 50px;
  width: 50px;
  display: inline-block;
}

.user2:hover {
  background: #10699B;
}

.user2:hover ul {
  visibility: visible;
}

.user2 ul {
  visibility: hidden;
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  margin: 0;
  padding: 0;
  list-style: none;
  width: 7rem;
  background-color: #10699B;
}

.user2 ul li a {
  display: block;
  padding: 0.6rem 1.4rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

.user2 ul li:last-child a {
  border: none;
}




</style>
<div class="user2">
      <ul>
        <li><a href="#">Black</a></li>
        <li><a href="#">Blue</a></li>
        <li><a href="#">Red</a></li>
        <li><a href="#">Green</a></li>
      </ul>
    </div>
          <input type="text" id="doodle_title" class="placeholder" data-value="Type your title here..." value="Type your title here..." />
          <select id="doodle_color">
            <option value="black">Black</option>
            <option value="blue" selected="selected">Blue</option>
            <option value="red">Red</option>
            <option value="green">Green</option>
          </select>
          <span id="save_text"></span>
        </div>
        <div id="doodle_image">
          <canvas id="doodle_canvas"></canvas>
        </div>
      </div>
    </div>
    {{#if doodle}}
    <div class="doodle_meta">
      <img src="{{doodle.avatar}}" alt="" />
      <span class="author">
        <a href="/user/{{doodle.authorString}}">{{doodle.authorString}}</a>
      </span>
    </div>
    {{/if}}
    {{#if doodle.parent}}
    <div class="doodle_meta">
      <strong><a href="/{{doodle.parent}}">View original doodle &rarr;</a></strong>
    </div>
    {{/if}}
  </div>
</div>
{{#if doodle}}
<script>
  var currentDoodle = {
    _id: '{{doodle._id}}',
    title: '{{doodle.title}}',
    slug: '{{doodle.slug}}',
    image: '{{doodle.image}}'
  }
</script>
{{/if}}
