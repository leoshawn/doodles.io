{{!< layout}}
<div class="vertical_layout">
  <div class="vertical_cell">
    <div id="doodle" class="container">
      <div class="doodle_ratio_push"></div>
      <div class="doodle_ratio">
        <div class="doodle_heading">
          <input type="text" id="doodle_title" class="placeholder" data-value="Type your title here..." value="Type your title here..." />
          <select id="doodle_color">
            <option value="black">Black</option>
            <option value="blue" selected="selected">Blue</option>
            <option value="red">Red</option>
            <option value="green">Green</option>
          </select>
          <span id="save_text"></span>
        </div>
        <div id="doodle_image">
          <canvas id="doodle_canvas"></canvas>
        </div>
      </div>
    </div>
    {{#if doodle.parent}}
    <div class="doodle_meta">
      <strong><a href="/{{doodle.parent}}">View original doodle &rarr;</a></strong>
    </div>
    {{/if}}
  </div>
</div>
{{#if doodle}}
<script>
  var currentDoodle = {
    _id: '{{doodle._id}}',
    title: '{{doodle.title}}',
    slug: '{{doodle.slug}}',
    image: '{{doodle.image}}'
  }
</script>
{{/if}}
