<!DOCTYPE html>
<html>
  <head>
    <title>Doodles.io</title>
    <meta name="viewport" content="width=device-width, user-scalable=no">
    <link href="/public/css/style.css" rel="stylesheet">
  </head>
  <body>
    <div class="bar">
      <img src="/public/img/logo.png" class="logo" alt="Doodles.io" />
    </div>
    <div class="container">
      <div class="dummy"></div>
      <div class="main">
        <nav>
          <select id="color">
            <option value="black">Black</option>
            <option value="blue" selected="selected">Blue</option>
            <option value="red">Red</option>
            <option value="green">Green</option>
          </select>
          <span id="save_text"></span>
        </nav>
        <div id="heading">
          <input type="text" id="title" placeholder="Type your title here..." />
        </div>
        <div id="sketch">
          <canvas id="tools_sketch" class="notepad"></canvas>
        </div>
      </div>
    </div>
    <script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
    <script>
    {{#if doodle}}
      var existingDoodle = {
        title: '{{doodle.title}}',
        slug: '{{doodle.slug}}',
        image: '{{doodle.image}}',
        _id: '{{doodle._id}}'
      };
    {{else}}
      var existingDoodle = null;
    {{/if}}
    </script>
    <script src="/public/js/app.js"></script>
  </body>
</html>