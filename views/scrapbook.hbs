{{!< layout}}
<ul id="scrapbook">
  {{#each doodles}}
  <li data-slug={{slug}}>
    <div class="doodle_scrapbook">
      <div class="doodle_ratio_push"></div>
      <div class="doodle_ratio">
        <div class="doodle_image">
          <a class="doodle_image_link loader" href="/{{slug}}" data-image_url="{{image}}" data-image_alt="{{title}}"></a>
        </div>
      </div>
    </div>
    {{#if ../userIsOwner}}
      <input type="button" class="delete_button" value="Delete" />
    {{/if}}
  </li>
  {{/each}}
</ul>
